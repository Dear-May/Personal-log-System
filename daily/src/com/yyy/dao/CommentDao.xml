<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yyy.dao.CommentDao">
     
     <insert id="addComment" parameterType="comment">
     insert into comments(
     	daily_id,
     	user_name,
     	user_id,
     	com_detail
     )values(
     	#{daily_id},
     	#{user_name},
     	#{user_id},
     	#{com_detail}
     )
     </insert>
     
     <select id="findComments" resultType="comment">
     	select * from comments where daily_id = #{daily_id} order by id
     </select>
     
     <delete id="deleteComment">
     	delete from comments where daily_id=#{daily_id}
     </delete>
     
     <select id="findUser_id" resultType="Integer">
		select user_id from comments where id = #{id}
	 </select>
     
     <delete id="deleteComment_one">
     	delete from comments where id=#{id}
     </delete>
     
</mapper>